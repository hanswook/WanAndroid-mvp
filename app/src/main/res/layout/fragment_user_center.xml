<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.han.wanandroid.ui.fragment.UserCenterFragment">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/uc_text_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/uc_text_collection"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/a88_blue"
        android:gravity="center"
        android:textSize="25sp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/uc_text_about"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/a88_yellow"
        android:gravity="center"
        android:textSize="25sp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/uc_text_login"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/a88_purple"
        android:gravity="center"
        android:textSize="25sp" />

</LinearLayout>
